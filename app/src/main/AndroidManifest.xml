<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plandel.compose002">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".YugiDeckApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Compose002">
        <activity
            android:name=".ui.AboutMyCardActivity"
            android:parentActivityName=".ui.AboutMyCardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.myDeck.MyDeckActivity"
            android:parentActivityName=".ui.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.search.SearchCardActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.aboutCard.AboutCardActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>